{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "CS2 CFG",
  "scopeName": "source.cs2cfg",
  "patterns": [
    { "include": "#comment" },
    { "include": "#command" },
    { "include": "#numeric-literal" },
    { "include": "#variable" },
    { "include": "#log-flags" },
    { "include": "#function" },
    { "include": "#punctuation-semicolon" }
  ],
  "repository": {
    "punctuation-semicolon": {
      "patterns": [
        {
          "name": "string.quoted.double.cfg",
          "match": ";"
        },
        {
          "name": "string.quoted.double.cfg",
          "match": "/"
        },
        {
          "name": "string.quoted.double.cfg",
          "match": "\\|"
        },
        {
          "name": "string.quoted.double.cfg",
          "match": "~"
        },
        {
          "name": "string.quoted.double.cfg",
          "match": ":"
        }
      ]
    },
    "comment": {
      "patterns": [
        {
          "name": "comment.line.double-slash.js",
          "begin": "(//)",
          "end": "(?=^)"
        }
      ]
    },
    "log-flags": {
      "patterns": [
        {
          "name": "keyword.operator.quantifier.regexp",
          "match": "\\blog_flags\\b"
        },
        {
          "name": "keyword.control.cfg",
          "match": "(?<=log_flags\\s)\\w+"
        },
        {
          "name": "constant.language.cfg",
          "match": "(?<=\\s)([\\+|-]\\w+)"
        }
      ]
    },
    "function": {
      "name": "variable.other.readwrite.js",
      "begin": "\"",
      "beginCaptures": { "0": { "name": "string.quoted.double.cfg" } },
      "end": "\"",
      "endCaptures": { "0": { "name": "string.quoted.double.cfg" } },
      "patterns": [
        { "include": "#punctuation-semicolon" },
        { "include": "#command" },
        { "include": "#numeric-literal" },
        { "include": "#variable" }
      ]
    },
    "variable": {
      "patterns": [
        {
          "name": "support.function",
          "match": "([\\+|-]?[_$[:alpha:]][_$[:alnum:]]*)"
        }
      ]
    },
    "numeric-literal": {
      "patterns": [
        {
          "name": "constant.numeric",
          "match": "(-?\\d(?:.\\d)?)"
        }
      ]
    },
    "command": {
      "patterns": [
        { "include": "#buttons" },
        { "include": "#actions" },
        { "include": "#CS-command" },
        { "include": "#sourcemod" },
        { "include": "#movement" }
      ]
    },
    "movement": {
      "patterns": [
        {
          "name": "constant.character.set.regexp",
          "match": "(?i)\\b(forward|back|right|left|forwardback|rightleft)\\b(?=\\s[-+]?\\d)"
        },
        { "include": "#numeric-literal" }
      ]
    },
    "buttons": {
      "patterns": [
        {
          "name": "support.class",
          "match": "(?i)(?:(?<=bind\\s)|(?<=bindtoggle\\s))(\")?(\\d|[a-z]|KEY|MOUSE_X|MOUSE_Y||MOUSE\\d?|MWHEELUP|MWHEELDOWN|KP_\\w+|LEFTARROW|UPARROW|RIGHTARROW|DOWNARROW|SPACE|SHIFT|RSHIFT|ALT|RALT|CTRL|RCTRL|TAB|INS|END|ESCAPE|SEMICOLON|BACKSPACE|HOME|END|F\\d{1,2}|PGUP|PGDN|PAUSE|\\/|`|\\'|\\[|\\]|\\.|\\-|\\=|,|\\\\)(\")?\\s"
        }
      ]
    },
    "actions": {
      "patterns": [
        {
          "name": "constant.language",
          "match": "(?i)([\\+|-]attack\\d?|[\\+|-]jump|[\\+|-]sprint|[\\+|-]use|[\\+|-]duck|[\\+|-]reload|[\\+|-]forward|[\\+|-]back|[\\+|-]left|[\\+|-]right|[\\+|-]lookatweapon|[\\+|-]noclip)\\b"
        },
        {
          "name": "constant.language",
          "match": "(?i)\\b(yaw|pitch|say|say_team|say_party|lastinv|load_itempreset|voicemenu|voice_menu_\\d|join_class|vote|changeclass|changeteam|open_charinfo_\\w+|show_quest_log|disguiseteam|cancelselect|pause|quit|toggleconsole|buy|buymenu|radio|radio1|radio2|radio3|drop|teammenu|messagemode|messagemode2|disconnect|developer|playvol|screenshot|save_replay|askconnect_accept|abuse_report_queue|name|lastdisguise|dropitem|centerview|showmapinfo|inspect|invnext|invprev|wait|taunt_by_name|slot\\d{1,2})\\b"
        }
      ]
    },
    "sourcemod": {
      "patterns": [
        {
          "name": "keyword.operator.quantifier.regexp",
          "match": "(?i)\\b(sleep|blog_flags|echo|echoln|clear|exec|execifexists|exec_async|grep|setinfo|incrementvar|multvar|pwatchvar|toggle|cl_radial_radio_tab_(0|1|2)_text_(1|2|3|4|5|6|7|8))\\b"
        }
      ]
    },
    "CS-command": {
      "patterns": [
        {
          "name": "keyword.control.cfg",
          "match": "(?i)\\b(give|ammo_grenade_limit_total|binddefaults|player_ping|alias|bind|bind_mac|bindtoggle|toggle|unbind|unbindall|volume|crosshair|sensitivity|rate|map|deathmatch|tracer_extra|in_usekeyboardsampletime|joystick|fast_fogvolume|incrementvar|joy_\\w+|fov_\\w+|viewmodel\\w+|m_\\w+|map_\\w+|r_\\w+|net_\\w+|cl_\\w+|tf_\\w+|sv_\\w+|con_\\w+|obj_\\w+|hud_\\w+|sixense_\\w+|windows_\\w+|snd_\\w+|mat_\\w+|mp_\\w+|flex_\\w+|lod_\\w+|rope_\\w+|glow_\\w+|demo_\\w+|func_\\w+|violence_\\w+|dsp_\\w+|props_\\w+|ragdoll_\\w+|ai_\\w+|g_\\w+|cam_\\w+|sb_\\w+|mod_\\w+|nav_\\w+|filesystem_\\w+|budget__\\w+|c_\\w+|cache_\\w+|replay_\\w+|vr_\\w+|pyro_\\w+|nb_\\w+|ent_\\w+|fire_\\w+|fog_\\w+|ifm_\\w+|ds_\\w+|host_\\w+|cc_\\w+|g_\\w+|gameui_\\w+|full|blink_duration|bloodspray|bot|bot_\\w+|mm_\\w+|mc_\\w+|spec_\\w+|zoom_\\w+|gameinstructor_\\w+|fps_\\w+|game_\\w+|voice_\\w+|sm_\\w+)\\b"
        }
      ]
    }
  }
}
