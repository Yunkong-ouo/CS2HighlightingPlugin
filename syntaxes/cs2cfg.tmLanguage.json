{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "CS2 CFG",
  "scopeName": "source.cs2cfg",
  "patterns": [
    { "include": "#comment" },
    { "include": "#command" },
    { "include": "#variable" },
    { "include": "#punctuation-semicolon" },
    { "include": "#numeric-literal" }
  ],
  "repository": {
    "punctuation-semicolon": {
      "patterns": [
        {
          "name": "string.quoted.double.cfg",
          "match": "\""
        },
        {
          "name": "keyword.operator",
          "match": "\\;"
        },
        {
          "name": "keyword.operator",
          "match": "\\/|\\\\"
        },
        {
          "name": "string.quoted.double.cfg",
          "match": "\\|"
        },
        {
          "name": "string.quoted.double.cfg",
          "match": "\\~"
        },
        {
          "name": "string.quoted.double.cfg",
          "match": "\\:"
        },
        {
          "name": "keyword.operator",
          "match": "\\."
        },
        {
          "name": "string.quoted.double.cfg",
          "match": "\\[|\\]"
        },
        {
          "name": "string.quoted.double.cfg",
          "match": "\\(|\\)"
        },
        {
          "name": "string.quoted.double.cfg",
          "match": "\\="
        },
        {
          "name": "string.quoted.double.cfg",
          "match": "\\#"
        },
        {
          "name": "string.quoted.double.cfg",
          "match": "\\<|\\>"
        }
      ]
    },
    "comment": {
      "patterns": [
        {
          "name": "comment.line.double-slash.js",
          "begin": "(//)",
          "beginCaptures": { "1": { "name": "punctuation.definition.comment.js" } },
          "end": "$",
          "patterns": [
            {
              "name": "comment.content",
              "match": ".+"
            }
          ]
        }
      ]
    },
    "variable": {
      "patterns": [
        {
          "name": "variable.other.readwrite.js",
          "match": "(?i)(?<!//)([\\+\\-]?[\\$a-zA-Z0-9_\\p{L}][\\$a-zA-Z0-9_\\p{L}\\+\\-_]*)"
        }
      ]
    },
    "numeric-literal": {
      "patterns": [
        {
          "name": "constant.numeric",
          "match": "(?i)(?<!//)([+-]?\\d(?:[_$]*))"
        }
      ]
    },
    "command": {
      "patterns": [
        { "include": "#buttons" },
        { "include": "#actions" },
        { "include": "#sourcemod" },
        { "include": "#CS-command" },
        { "include": "#setinfo-pattern" },
        { "include": "#movement" },
        { "include": "#log-flags" },
        { "include": "#alias" }
      ]
    },
    "movement": {
      "patterns": [
        {
          "name": "constant.character.set.regexp",
          "match": "(?i)\\b(duck|attack|sprint|jump|use|forward|back|right|left|forwardback|rightleft)\\b(?=\\s[\\+|-]?\\d)"
        },
        {
          "name": "constant.numeric",
          "match": "(?<=^|\\s)([-+]?\\d+(?:\\.\\d+)?)(?=\\s|$|;|\"|,)"
        }
      ]
    },
    "setinfo-pattern": {
      "patterns": [
        { "match": "(?i)\\bsetinfo\\b" },
        {
          "name": "keyword.control.cfg",
          "match": "(?i)(?<=setinfo\\s)(\"?)(\\w+)(\"?)",
          "captures": {
            "1": { "name": "string.quoted.double.cfg" },
            "2": { "name": "keyword.control.cfg" },
            "3": { "name": "string.quoted.double.cfg" }
          }
        },
        {
          "match": "(?i)(?<=setinfo\\s\"?\\w+\"?\\s)(\"?)(\\w+)(\"?)",
          "captures": {
            "1": { "name": "string.quoted.double.cfg" },
            "2": { "name": "support.class.cfg" },
            "3": { "name": "string.quoted.double.cfg" }
          }
        }
      ]
    },
    "log-flags": {
      "patterns": [
        { "match": "(?i)\\blog_flags\\b" },
        {
          "name": "keyword.control.cfg",
          "match": "(?i)(?<=log_flags\\s)\\w+"
        },
        {
          "name": "support.class.cfg",
          "match": "(?i)(?<=log_flags\\s\\w+\\s)\\w+"
        },
        {
          "name": "constant.language.cfg",
          "match": "(?i)(?<=log_flags\\s\\w+(\\s\\w+)?\\s)([\\+|-]\\w+)"
        }
      ]
    },
    "alias": {
      "patterns": [
        {
          "match": "(?i)(?<!//)(?<=alias\\s)(\"?)([\\+\\-]?[\\$a-zA-Z0-9_\\p{L}][\\$a-zA-Z0-9_\\p{L}\\+\\-_]*)(\"?)",
          "captures": {
            "1": { "name": "string.quoted.double.cfg" },
            "2": { "name": "support.function" },
            "3": { "name": "string.quoted.double.cfg" }
          }
        },
        {
          "name": "constant.regexp",
          "match": "(?i)(?<!//)(?<=alias\\s[\\+\\-]?[\\$a-zA-Z0-9_\\p{L}][\\$a-zA-Z0-9_\\p{L}\\+\\-_]*\\s)([\\+\\-]?[\\$a-zA-Z0-9_\\p{L}][\\$a-zA-Z0-9_\\p{L}\\+\\-_]*)"
        }
      ]
    },
    "buttons": {
      "patterns": [
        {
          "match": "(?i)(?:(?<=bind\\s)|(?<=bindtoggle\\s))(\")?(\\d|[a-z]|CAPSLOCK|KEY|MOUSE_X|MOUSE_Y|MOUSE\\d?|MWHEELUP|MWHEELDOWN|KP_\\w+|LEFTARROW|UPARROW|RIGHTARROW|DOWNARROW|SPACE|SHIFT|RSHIFT|ALT|RALT|CTRL|RCTRL|TAB|INS|END|ESCAPE|SEMICOLON|BACKSPACE|HOME|END|F\\d{1,2}|PGUP|PGDN|PAUSE|\\/|`|\\'|\\[|\\]|\\.|\\-|\\=|,|\\\\)(\")?\\s",
          "captures": {
            "1": { "name": "string.quoted.double.cfg" },
            "2": { "name": "support.class" },
            "3": { "name": "string.quoted.double.cfg" }
          }
        }
      ]
    },
    "actions": {
      "patterns": [
        {
          "name": "constant.language",
          "match": "(?i)([\\+|-]attack\\d?|[\\+|-]jump|[\\+|-]sprint|[\\+|-]use|[\\+|-]duck|[\\+|-]reload|[\\+|-]forward|[\\+|-]back|[\\+|-]left|[\\+|-]right|[\\+|-]lookatweapon|[\\+|-]noclip)\\b"
        },
        {
          "name": "constant.language",
          "match": "(?i)\\b(yaw|pitch|say|say_team|say_party|lastinv|load_itempreset|voicemenu|voice_menu_\\d|join_class|vote|changeclass|changeteam|open_charinfo_\\w+|show_quest_log|disguiseteam|cancelselect|pause|quit|toggleconsole|buy|buymenu|radio|radio1|radio2|radio3|drop|teammenu|messagemode|messagemode2|disconnect|developer|playvol|screenshot|save_replay|askconnect_accept|abuse_report_queue|name|lastdisguise|dropitem|centerview|showmapinfo|inspect|invnext|invprev|wait|taunt_by_name|slot\\d{1,2})\\b"
        }
      ]
    },
    "sourcemod": {
      "patterns": [
        {
          "name": "keyword.operator.quantifier.regexp",
          "match": "(?i)\\b(sleep|log_flags|echo|echoln|clear|exec|execifexists|exec_async|grep|setinfo|incrementvar|multvar|pwatchvar|toggle|cl_radial_radio_tab_(0|1|2)_text_(1|2|3|4|5|6|7|8))\\b"
        }
      ]
    },
    "CS-command": {
      "patterns": [
        {
          "name": "keyword.control.cfg",
          "match": "(?i)\\b(give|ammo_grenade_limit_total|binddefaults|player_ping|alias|bind|bind_mac|bindtoggle|toggle|unbind|unbindall|volume|crosshair|sensitivity|rate|map|deathmatch|tracer_extra|in_usekeyboardsampletime|joystick|fast_fogvolume|incrementvar|joy_\\w+|fov_\\w+|viewmodel\\w+|m_\\w+|map_\\w+|r_\\w+|net_\\w+|cl_\\w+|tf_\\w+|sv_\\w+|con_\\w+|obj_\\w+|hud_\\w+|sixense_\\w+|windows_\\w+|snd_\\w+|mat_\\w+|mp_\\w+|flex_\\w+|lod_\\w+|rope_\\w+|glow_\\w+|demo_\\w+|func_\\w+|violence_\\w+|dsp_\\w+|props_\\w+|ragdoll_\\w+|ai_\\w+|g_\\w+|cam_\\w+|sb_\\w+|mod_\\w+|nav_\\w+|filesystem_\\w+|budget__\\w+|c_\\w+|cache_\\w+|replay_\\w+|vr_\\w+|pyro_\\w+|nb_\\w+|ent_\\w+|fire_\\w+|fog_\\w+|ifm_\\w+|ds_\\w+|host_\\w+|cc_\\w+|g_\\w+|gameui_\\w+|full|blink_duration|bloodspray|bot|bot_\\w+|mm_\\w+|mc_\\w+|spec_\\w+|zoom_\\w+|gameinstructor_\\w+|fps_\\w+|game_\\w+|voice_\\w+|sm_\\w+)\\b"
        }
      ]
    }
  }
}
